<% provide(:title, formatted_title(@pin.title.truncate(25))) %>

<div class="pin-display">
  <img src="<%= @pin.pin_image %>" class="pinned-pic">
  <div class="pin-text">
    <h2><%= @pin.title %></h2>
    <p><%= simple_format(@pin.description) %></p>
  </div>
  <div class="pin-footer">
    <p>Submitted by <%= @user.email  %></p>
  </div>
</div>
