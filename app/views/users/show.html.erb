<% provide(:title, "#{@user.name}s homepage") %>

<h1><%= @user.name %></h1>

<p><%= @user.email %></p>

<p><%= link_to "Update account", edit_user_path %></p>

<p><%= link_to "Delete account?", user_path,
              method: :delete,
              data: { confirm: "Are you sure you want to delete? All your pins will also be permanently deleted. This action cannot be undone." } %></p>