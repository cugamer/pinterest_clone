<% provide(:title, formatted_title("Sign in")) %>

<h1>Sign In</h1>

<div class="wide-form">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, :value => 'sample@sample.com' %>
    
    <%= f.label :password %>
    <%= f.password_field :password, :value => 'password' %>
    
    <%= f.submit "Log in" %>

  <% end %>
</div>

<p class="sign-in-up-link">New here? <%= link_to "Sign up here", new_user_path %></p>
